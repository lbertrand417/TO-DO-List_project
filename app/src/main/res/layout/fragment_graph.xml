<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Graph">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="graph"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="2dp"
            android:layout_height="500dp"
            android:background="#000000"
            android:layout_alignLeft="@id/ll_touch" />
        <RelativeLayout
            android:id="@+id/ll_touch"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            >
            <ImageView
                android:id="@+id/task1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/task1"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="250dp"></ImageView>
            <ImageView
                android:id="@+id/task2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/task2"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp"></ImageView>
            <ImageView
                android:id="@+id/task3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/task3"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="150dp"></ImageView>
        </RelativeLayout>
        <View
            android:layout_width="500dp"
            android:layout_height="5px"
            android:background="#000000"
            android:layout_below="@id/ll_touch"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:id="@+id/popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/ll_touch"
            android:background="@color/teal_700"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/str_effort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="effort" />

                <EditText
                    android:id="@+id/edit_effort"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number" ></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/str_urgency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="urgency" />

                <EditText
                    android:id="@+id/edit_urgency"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number" ></EditText>
            </LinearLayout>

            <Button
                android:id="@+id/add_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Add"

                />

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/add_btn_general"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_gravity="bottom|right"
        />

</FrameLayout>