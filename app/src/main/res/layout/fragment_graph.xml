<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/task3"-->
<!--                android:layout_marginLeft="250dp"-->
<!--                android:layout_marginTop="150dp"></ImageView>-->
        </RelativeLayout>


        <!--        y axis-->
        <TableLayout
            android:id="@+id/yaxis"
            android:layout_width="50dp"
            android:layout_height="500dp"
            android:layout_toLeftOf="@id/ll_touch"
            android:background="#000">
            <TableRow
                android:layout_weight="1"
                android:background="#fff"
                android:layout_marginRight="0.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urgent"></TextView>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:background="#fff"
                android:layout_marginRight="0.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textAlignment="textEnd"
                    android:gravity="end"></TextView>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:background="#fff"
                android:layout_marginRight="0.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textAlignment="textEnd"
                    android:gravity="end"></TextView>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:background="#fff"
                android:layout_marginRight="0.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textAlignment="textEnd"
                    android:gravity="end"></TextView>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:background="#fff"
                android:layout_marginRight="0.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textAlignment="textEnd"
                    android:gravity="end"></TextView>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:background="#fff"
                android:layout_marginRight="0.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="textEnd"
                    android:gravity="end"></TextView>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:background="#fff"
                android:layout_marginRight="0.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:gravity="end"></TextView>
            </TableRow>
        </TableLayout>
<!--        x axis-->
        <TableLayout
            android:id="@+id/xaxis"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:stretchColumns="*"
            android:background="#000"
            android:layout_below="@+id/ll_touch"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="15dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_marginTop="0.5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Effort"></TextView>
            </TableRow>
        </TableLayout>



        <LinearLayout
            android:id="@+id/popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/ll_touch"
            android:background="@color/teal_700"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/str_effort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="effort" />

                <EditText
                    android:id="@+id/edit_effort"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number" ></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/str_urgency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="urgency" />

                <EditText
                    android:id="@+id/edit_urgency"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:inputType="number" ></EditText>
            </LinearLayout>

            <Button
                android:id="@+id/add_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Add"

                />

        </LinearLayout>

    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_btn_general"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        android:clickable="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" />

</FrameLayout>